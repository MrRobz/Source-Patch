{
  "manifest_version": 3,
  "name": "Source Patch",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["src/content-script/content.jsx"]
    }
  ],
  "permissions": ["storage", "tabs", "unlimitedStorage"]
}
